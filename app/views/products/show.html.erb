<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd
        </dl>
      </div>
    </div>
    <% if current_user %>
      <section class="review">
        <%= form_for [@product, @review] do |form| %>
          <div class="form-group">
            <%= form.label 'Rating' %>
            <%= form.select :rating, [1, 2, 3, 4, 5], {}, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label 'Review:' %>
            <%= form.text_field :description, class: 'form-control' %>
          </div>
          <%= form.submit 'Post', class: 'btn btn-primary' %>
        <% end %>
      </section>
    <% else %>
      <h3><a href="/login">Login</a> to place a review</h3>
    <% end %>
    <%= yield %>
    <div class="row">
      <div class="col-sm-10">
        <% sorted = @product.reviews.order(created_at: :desc) %>
        <% sorted.each do |review| %>
          <h3><%= "#{review.user.first_name} says:" %></h3>
          <h4><%= "#{review.rating} / 5" %></h4>
          <div><%= review.description %></div><br/>
          <% if current_user.id == review.user.id %>
          <a><%= link_to("Delete", [@product, review], method: :delete) %></a>
          <% end %>
        <% end %>
      </div>
    </div>

  </article>

</section>
